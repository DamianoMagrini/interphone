{
  "include": ["./**/*.ts"],

  "compilerOptions": {
    "target": "ES6",

    "allowJs": false,
    "esModuleInterop": true,
    "lib": ["ES6", "DOM", "WebWorker"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true // DOM and WebWorker are incompatible, but both needed
  }
}
