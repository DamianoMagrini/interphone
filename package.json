{
  "name": "interphone",
  "version": "1.0.0",
  "description": "A library that manages communication with web workers, hiding it behind a simple asynchronous interface.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf main worker",
    "build": "run-s clean build:tsc",
    "build:tsc": "run-p build:tsc:*",
    "build:tsc:main": "tsc --project src/main/tsconfig.json",
    "build:tsc:worker": "tsc --project src/worker/tsconfig.json",
    "lint": "run-s lint:tsc lint:eslint",
    "lint:tsc": "run-p lint:tsc:*",
    "lint:tsc:main": "tsc --noEmit --project src/main/tsconfig.json",
    "lint:tsc:worker": "tsc --noEmit --project src/worker/tsconfig.json",
    "lint:eslint": "eslint src/**/*.ts"
  },
  "author": "Damiano Magrini <damiano.magrini@gmail.com>",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  }
}
